<%- include('partials/_header') %>

<style>
    :root {
        --primary-red: #e63946;
        --light-red: #ffebee;
        --dark-red: #9a0007;
        --primary-blue: #1d3557;
        --light-blue: #a8dadc;
        --pale-blue: #f1faee;
    }
    
    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--pale-blue);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--pale-blue), var(--light-blue));
        padding: 100px 20px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .app-logo {
        width: 100px;
        height: auto;
        margin-bottom: 30px;
        animation: float 3s ease-in-out infinite;
    }

    h1 {
        font-weight: 800;
        color: var(--primary-blue);
        margin-bottom: 20px;
        font-size: 2.8rem;
    }
    
    h1 span {
        color: var(--primary-red);
    }

    .hero-lead {
        font-size: 1.3rem;
        color: var(--primary-blue);
        opacity: 0.9;
        margin-bottom: 40px;
        line-height: 1.6;
    }

    /* Buttons */
    .btn-donate {
        background-color: var(--primary-red);
        color: white;
        border: none;
        padding: 16px 40px;
        font-size: 1.1rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(230, 57, 70, 0.4);
    }
    
    .btn-donate:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(230, 57, 70, 0.5);
    }
    
    .btn-doctor {
        background-color: transparent;
        color: var(--primary-blue);
        border: 2px solid var(--primary-blue);
        padding: 14px 40px;
        font-size: 1.1rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .btn-doctor:hover {
        background-color: var(--primary-blue);
        color: white;
        transform: translateY(-3px);
    }

    /* Steps Section */
    .steps-section {
        padding: 80px 0;
        background-color: white;
    }
    
    .section-title {
        text-align: center;
        margin-bottom: 60px;
    }
    
    .section-title h2 {
        font-weight: 700;
        color: var(--primary-blue);
        margin-bottom: 15px;
        font-size: 2.5rem;
    }
    
    .section-title p {
        color: #666;
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }
    
    .step-card {
        padding: 30px;
        border-radius: 15px;
        background: white;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        height: 100%;
        border-top: 4px solid var(--primary-red);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .step-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }
    
    .step-number {
        position: absolute;
        top: 15px;
        right: 15px;
        font-size: 5rem;
        font-weight: 800;
        color: rgba(230, 57, 70, 0.1);
        line-height: 1;
    }
    
    .step-icon {
        font-size: 2.5rem;
        color: var(--primary-red);
        margin-bottom: 20px;
    }
    
    .step-title {
        font-weight: 600;
        color: var(--primary-blue);
        margin-bottom: 15px;
        font-size: 1.4rem;
    }

    /* User Types Section */
    .user-types {
        padding: 80px 0;
        background-color: var(--pale-blue);
    }
    
    .user-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        background: white;
    }
    
    .user-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }
    
    .user-header {
        padding: 30px;
        color: white;
        text-align: center;
    }
    
    .donor-header {
        background: linear-gradient(135deg, var(--primary-red), var(--dark-red));
    }
    
    .doctor-header {
        background: linear-gradient(135deg, var(--primary-blue), #142a4a);
    }
    
    .user-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }
    
    .user-body {
        padding: 30px;
    }
    
    .user-step {
        display: flex;
        margin-bottom: 20px;
        align-items: flex-start;
    }
    
    .user-step-number {
        background-color: var(--primary-red);
        color: white;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        font-weight: bold;
        margin-right: 15px;
        flex-shrink: 0;
    }
    
    .doctor-step .user-step-number {
        background-color: var(--primary-blue);
    }

    /* Stats Section */
    .stats-section {
        padding: 80px 0;
        background: linear-gradient(135deg, var(--primary-blue), #142a4a);
        color: white;
        text-align: center;
    }
    
    .stat-item {
        padding: 20px;
    }
    
    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 10px;
    }
    
    .stat-label {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    /* CTA Section */
    .cta-section {
        padding: 80px 0;
        background-color: white;
        text-align: center;
    }
    
    .cta-card {
        background: linear-gradient(135deg, var(--pale-blue), white);
        border-radius: 15px;
        padding: 60px;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }
    
    .cta-title {
        font-weight: 700;
        color: var(--primary-blue);
        margin-bottom: 20px;
        font-size: 2.2rem;
    }

    /* Animations */
    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }
    
    .fade-in {
        opacity: 0;
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        transform: translateY(20px);
    }
    
    .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        h1 {
            font-size: 2.2rem;
        }
        
        .hero-lead {
            font-size: 1.1rem;
        }
        
        .btn-donate, .btn-doctor {
            padding: 14px 30px;
            font-size: 1rem;
            display: block;
            width: 100%;
            margin-bottom: 15px;
        }
        
        .step-card, .user-card {
            margin-bottom: 30px;
        }
    }
</style>

